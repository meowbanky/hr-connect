RewriteEngine On
RewriteBase /

# 1. Root -> Candidate Login
RewriteRule ^$ candidate_registration/login.php [L]

# 2. Authentication
RewriteRule ^login/?$ candidate_registration/login.php [L]
RewriteRule ^register/?$ candidate_registration/register.php [L]
RewriteRule ^logout/?$ candidate_registration/logout.php [L]

# 3. Candidate Portal
RewriteRule ^dashboard/?$ candidate_application_myapplication/index.php [L]
RewriteRule ^profile/?$ candidate_profile/index.php [L]
RewriteRule ^saved-jobs/?$ candidate_application_bookmarks/index.php [L]
RewriteRule ^bookmarks/?$ candidate_application_bookmarks/index.php [L]

# 4. Job Board
RewriteRule ^jobs/?$ job_board_&_candidate_portal/index.php [L]
RewriteRule ^job/([0-9]+)/?$ job_board_&_candidate_portal/view_job.php?id=$1 [L,QSA]
RewriteRule ^view-job/?$ job_board_&_candidate_portal/view_job.php [L,QSA]

# 5. Applications
RewriteRule ^application/([0-9]+)/?$ candidate_application_view_details/index.php?id=$1 [L,QSA]
RewriteRule ^application-details/?$ candidate_application_view_details/index.php [L,QSA]

# 6. Notifications
RewriteRule ^notifications/?$ candidate_notifications/index.php [L]
RewriteRule ^notification/([0-9]+)/?$ candidate_notifications_details/index.php?id=$1 [L,QSA]

# 7. Admin Portal
RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/login/?$ admin/login.php [L]
RewriteRule ^admin/jobs/?$ admin/jobs.php [L]
RewriteRule ^admin/jobs/create/?$ admin/create_job.php [L]
RewriteRule ^admin/candidates/?$ admin/candidates.php [L]
RewriteRule ^admin/interviews/?$ admin/interviews.php [L]
RewriteRule ^admin/employees/?$ admin/employees.php [L]
RewriteRule ^admin/settings/?$ admin/settings.php [L]

# Prevent directory listing
Options -Indexes
